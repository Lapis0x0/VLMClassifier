{
  "name": "vlmclassifier-electron",
  "version": "1.0.0",
  "description": "VLM图像分类器桌面应用",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.5",
    "cors": "^2.8.5",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^5.0.1",
    "electron-updater": "^6.1.7",
    "express": "^4.18.2",
    "extract-zip": "^2.0.1",
    "form-data": "^4.0.0",
    "fs-extra": "^11.3.0",
    "glob": "^10.3.10",
    "mime-types": "^2.1.35",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.7.0"
  },
  "build": {
    "appId": "com.vlmclassifier.app",
    "productName": "VLMClassifier",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json",
      "package-lock.json"
    ],
    "extraResources": [
      {
        "from": "../node-backend",
        "to": "node-backend",
        "filter": ["**/*"]
      }
    ],
    "asarUnpack": [
      "node-backend/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  },
  "electronDownload": {
    "mirror": "https://npmmirror.com/mirrors/electron/"
  }
}
